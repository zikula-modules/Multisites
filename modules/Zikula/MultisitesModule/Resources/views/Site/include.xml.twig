{# purpose of this template: sites xml inclusion template #}
<site id="{{ site.getId() }}" createdon="{{ site.createdDate|localizeddate('medium', 'short') }}" updatedon="{{ site.updatedDate|localizeddate('medium', 'short') }}">
    <id>{{ site.id }}</id>
    <name><![CDATA[{{ site.name }}]]></name>
    <description><![CDATA[{{ site.description }}]]></description>
    <siteAlias><![CDATA[{{ site.siteAlias }}]]></siteAlias>
    <siteName><![CDATA[{{ site.siteName }}]]></siteName>
    <siteDescription><![CDATA[{{ site.siteDescription }}]]></siteDescription>
    <siteAdminName><![CDATA[{{ site.siteAdminName }}]]></siteAdminName>
    <siteAdminPassword><![CDATA[]]></siteAdminPassword>
    <siteAdminRealName><![CDATA[{{ site.siteAdminRealName }}]]></siteAdminRealName>
    <siteAdminEmail>{{ site.siteAdminEmail }}</siteAdminEmail>
    <siteCompany><![CDATA[{{ site.siteCompany }}]]></siteCompany>
    <siteDns><![CDATA[{{ site.siteDns }}]]></siteDns>
    <databaseName><![CDATA[{{ site.databaseName }}]]></databaseName>
    <databaseUserName><![CDATA[{{ site.databaseUserName }}]]></databaseUserName>
    <databasePassword><![CDATA[]]></databasePassword>
    <databaseHost><![CDATA[{{ site.databaseHost }}]]></databaseHost>
    <databaseType><![CDATA[{{ site.databaseType }}]]></databaseType>
    <logo{% if site.logo is not empty and site.logoMeta|default %} extension="{{ site.logoMeta.extension }}" size="{{ site.logoMeta.size }}" isImage="{% if site.logoMeta.isImage %}true{% else %}false{% endif %}"{% if site.logoMeta.isImage %} width="{{ site.logoMeta.width }}" height="{{ site.logoMeta.height }}" format="{{ site.logoMeta.format }}"{% endif %}{% endif %}>{{ site.logo }}</logo>
    <favIcon{% if site.favIcon is not empty and site.favIconMeta|default %} extension="{{ site.favIconMeta.extension }}" size="{{ site.favIconMeta.size }}" isImage="{% if site.favIconMeta.isImage %}true{% else %}false{% endif %}"{% if site.favIconMeta.isImage %} width="{{ site.favIconMeta.width }}" height="{{ site.favIconMeta.height }}" format="{{ site.favIconMeta.format }}"{% endif %}{% endif %}>{{ site.favIcon }}</favIcon>
    <allowedLocales>{% if site.allowedLocales is iterable and site.allowedLocales|length > 0 %}
        {% set firstItem = true %}
        {% for entry in if entry is not iterable %}
            {% if true == firstItem %}{% set firstItem = false %}{% else %}, {% endif %}{{ entry }}
        {% endfor %}
    {% endif %}
    </allowedLocales>
    <parametersCsvFile{% if site.parametersCsvFile is not empty and site.parametersCsvFileMeta|default %} extension="{{ site.parametersCsvFileMeta.extension }}" size="{{ site.parametersCsvFileMeta.size }}" isImage="{% if site.parametersCsvFileMeta.isImage %}true{% else %}false{% endif %}"{% if site.parametersCsvFileMeta.isImage %} width="{{ site.parametersCsvFileMeta.width }}" height="{{ site.parametersCsvFileMeta.height }}" format="{{ site.parametersCsvFileMeta.format }}"{% endif %}{% endif %}>{{ site.parametersCsvFile }}</parametersCsvFile>
    <parametersArray>{% if site.parametersArray is iterable and site.parametersArray|length > 0 %}
        {% set firstItem = true %}
        {% for entry in if entry is not iterable %}
            {% if true == firstItem %}{% set firstItem = false %}{% else %}, {% endif %}{{ entry }}
        {% endfor %}
    {% endif %}
    </parametersArray>
    <active>{% if not site.active %}0{% else %}1{% endif %}</active>
    <template>{% if site.template|default %}{{ site.template|zikulamultisitesmodule_formattedTitle }}{% endif %}</template>
    <project>{% if site.project|default %}{{ site.project|zikulamultisitesmodule_formattedTitle }}{% endif %}</project>
</site>
