{% block title %}
    {{ __('Set theme as default') }}
{% endblock %}
{% block adminPageIcon %}square{% endblock %}
{% block content %}
    <div class="zikulamultisitesmodule-setthemeasdefault zikulamultisitesmodule-setthemeasdefault">
