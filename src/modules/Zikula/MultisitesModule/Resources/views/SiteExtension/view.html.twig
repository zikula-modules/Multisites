{# purpose of this template: site extensions list view #}
{% extends routeArea == 'admin' ? 'ZikulaMultisitesModule::adminBase.html.twig' : 'ZikulaMultisitesModule::base.html.twig' %}
{% block title own ? __('My site extensions') : __('Site extensions list') %}
{% block admin_page_icon 'list-alt' %}
{% block content %}
<div class="zikulamultisitesmodule-siteextension zikulamultisitesmodule-view">

    <p class="alert alert-info">{{ __('A site consists of several extensions, which may be modules, themes or plugins.') }}</p>

    {{ block('page_nav_links') }}

    {{ include('@ZikulaMultisitesModule/SiteExtension/viewQuickNav.html.twig', {workflowStateFilter: false}) }}{# see template file for available options #}

    {% if routeArea == 'admin' %}
    <form action="{{ path('zikulamultisitesmodule_siteextension_' ~ routeArea ~ 'handleselectedentries') }}" method="post" id="siteExtensionsViewForm" class="form-horizontal" role="form">
        <div>
    {% endif %}
        <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover{% if routeArea == 'admin' %} table-condensed{% endif %}">
            <colgroup>
                {% if routeArea == 'admin' %}
                    <col id="cSelect" />
                {% endif %}
                <col id="cItemActions" />
                <col id="cName" />
                <col id="cExtensionVersion" />
                <col id="cExtensionType" />
                <col id="cSite" />
            </colgroup>
            <thead>
            <tr>
                {% if routeArea == 'admin' %}
                    <th id="hSelect" scope="col" class="{% if items|length > 0 %}fixed-column {% endif %}text-center z-w02">
                        <input type="checkbox" class="zikulamultisites-mass-toggle" />
                    </th>
                {% endif %}
                <th id="hItemActions" scope="col" class="{% if items|length > 0 %}fixed-column {% endif %}z-order-unsorted z-w02">{{ __('Actions') }}</th>
                <th id="hName" scope="col" class="text-left">
                    <a href="{{ sort.name.url }}" title="{{ __f('Sort by %s', {'%s': 'name'}) }}" class="{{ sort.name.class }}">{{ __('Name') }}</a>
                </th>
                <th id="hExtensionVersion" scope="col" class="text-left">
                    <a href="{{ sort.extensionVersion.url }}" title="{{ __f('Sort by %s', {'%s': 'extension version'}) }}" class="{{ sort.extensionVersion.class }}">{{ __('Extension version') }}</a>
                </th>
                <th id="hExtensionType" scope="col" class="text-left">
                    <a href="{{ sort.extensionType.url }}" title="{{ __f('Sort by %s', {'%s': 'extension type'}) }}" class="{{ sort.extensionType.class }}">{{ __('Extension type') }}</a>
                </th>
                <th id="hSite" scope="col" class="text-left">
                    <a href="{{ sort.site.url }}" title="{{ __f('Sort by %s', {'%s': 'site'}) }}" class="{{ sort.site.class }}">{{ __('Site') }}</a>
                </th>
            </tr>
            </thead>
            <tbody>
        
        {% for siteExtension in items %}
            <tr>
                {% if routeArea == 'admin' %}
                    <td headers="hSelect" class="fixed-column text-center z-w02">
                        <input type="checkbox" name="items[]" value="{{ siteExtension.getKey() }}" class="zikulamultisites-toggle-checkbox" />
                    </td>
                {% endif %}
                <td id="itemActions{{ siteExtension.getKey() }}" headers="hItemActions" class="fixed-column actions nowrap z-w02">
                    {% set itemActions = knp_menu_get('ZikulaMultisitesModule:ItemActionsMenu:menu', [], {entity: siteExtension, area: routeArea, context: 'view'}) %}
                    <div class="dropdown">
                        <a id="itemActions{{ siteExtension.getKey() }}DropDownToggle" role="button" data-toggle="dropdown" data-target="#" href="javascript:void(0);" class="hidden dropdown-toggle"><i class="fa fa-tasks"></i> <span class="caret"></span></a>
                        {{ knp_menu_render(itemActions, {template: 'ZikulaMenuModule:Override:actions.html.twig'}) }}
                    </div>
                </td>
                <td headers="hName" class="text-left">
                    {{ siteExtension.name|notifyFilters('zikulamultisitesmodule.filterhook.siteextensions')|safeHtml }}
                </td>
                <td headers="hExtensionVersion" class="text-left">
                    {{ siteExtension.extensionVersion }}
                </td>
                <td headers="hExtensionType" class="text-left">
                    {{ siteExtension.extensionType|zikulamultisitesmodule_listEntry('siteExtension', 'extensionType') }}
                </td>
                <td headers="hSite" class="text-left">
                    {% if siteExtension.site|default %}
                          {{ siteExtension.site|zikulamultisitesmodule_formattedTitle }}
                    {% else %}
                        {{ __('Not set.') }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr class="z-{{ routeArea == 'admin' ? 'admin' : 'data' }}tableempty">
                <td class="text-left" colspan="{% if routeArea == 'admin' %}6{% else %}5{% endif %}">
            {{ __('No site extensions found.') }}
              </td>
            </tr>
        {% endfor %}
        
            </tbody>
        </table>
        </div>
        
        {% if all != 1 and pager|default %}
            {{ pager({rowcount: pager.amountOfItems, limit: pager.itemsPerPage, display: 'page', route: 'zikulamultisitesmodule_siteextension_' ~ routeArea ~ 'view'}) }}
        {% endif %}
    {% if routeArea == 'admin' %}
            <fieldset>
                <label for="zikulaMultisitesModuleAction" class="col-sm-3 control-label">{{ __('With selected site extensions') }}</label>
                <div class="col-sm-6">
                    <select id="zikulaMultisitesModuleAction" name="action" class="form-control input-sm">
                        <option value="">{{ __('Choose action') }}</option>
                        <option value="delete" title="{{ __('Delete content permanently.') }}">{{ __('Delete') }}</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <input type="submit" value="{{ __('Submit') }}" class="btn btn-default btn-sm" />
                </div>
            </fieldset>
        </div>
    </form>
    {% endif %}

    {{ block('display_hooks') }}
</div>
{% endblock %}
{% block page_nav_links %}
    <p>
        {% if all == 1 %}
            {% set linkTitle = __('Back to paginated view') %}
            <a href="{{ path('zikulamultisitesmodule_siteextension_' ~ routeArea ~ 'view') }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
        {% else %}
            {% set linkTitle = __('Show all entries') %}
            <a href="{{ path('zikulamultisitesmodule_siteextension_' ~ routeArea ~ 'view', {all: 1}) }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
        {% endif %}
    </p>
{% endblock %}
{% block display_hooks %}
    
    {# here you can activate calling display hooks for the view page if you need it #}
    {# % if routeArea != 'admin' %}
        {% set hooks = notifyDisplayHooks(eventName='zikulamultisitesmodule.ui_hooks.siteextensions.display_view', urlObject=currentUrlObject) %}
        {% for providerArea, hook in hooks %}
            {{ hook }}
        {% endfor %}
    {% endif % #}
{% endblock %}
