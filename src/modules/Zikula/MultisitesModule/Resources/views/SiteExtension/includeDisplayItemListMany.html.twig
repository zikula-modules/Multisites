{# purpose of this template: inclusion template for display of related site extensions #}
{% set hasAdminPermission = hasPermission('ZikulaMultisitesModule:SiteExtension:', '::', 'ACCESS_EDIT') %}
{% if items|default and items|length > 0 %}
<ul class="list-group zikulamultisitesmodule-related-item-list siteextension">
{% for item in items %}
    {% if hasAdminPermission or item.workflowState == 'approved' %}
    <li class="list-group-item">
<h4 class="list-group-item-heading">
    {{ item|zikulamultisitesmodule_formattedTitle }}
</h4>
    </li>
    {% endif %}
{% endfor %}
</ul>
{% endif %}
