{# purpose of this template: inclusion template for display of related templates #}
{% set hasAdminPermission = hasPermission('ZikulaMultisitesModule:Template:', '::', 'ACCESS_EDIT') %}
{% if items|default and items|length > 0 %}
<ul class="zikulamultisitesmodule-related-item-list template">
{% for item in items %}
    {% if hasAdminPermission or item.workflowState == 'approved' %}
    <li>
    {{ item.getTitleFromDisplayPattern() }}
    </li>
    {% endif %}
{% endfor %}
</ul>
{% endif %}
